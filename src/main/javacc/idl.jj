/* Production 57 */

CaseLabel case_label() :
{
  List<ExpressionElement> expression = new ArrayList<ExpressionElement>();
  CaseLabel result;
}
{
  (
    "case" const_exp(expression) ":"
    { result = new ExpressionLabel(new ConstExp(expression)); }
  |
    "default" ":"
    { result = new DefaultLabel(); }
  )
  { return result; }
}

