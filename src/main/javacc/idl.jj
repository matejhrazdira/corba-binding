/* Production 56 */

UnionField casex() :
{
  Type type;
  Declarator declarator;
  List<CaseLabel> labels = new ArrayList<CaseLabel>();
  CaseLabel label;
}
{
  ( 
    label = case_label() 
    { labels.add(label); }
  )+ 
  type = type_spec() 
  declarator = declarator() 
  ";"
  { return new UnionField(type, declarator, labels); }
